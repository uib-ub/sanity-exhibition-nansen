@startuml "context"
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

!define NREC_LOGO img:data:image/png;base64,
!define SANITY img:data:image/png;base64,
!define VERCEL img:data:image/png;base64,
!define NEXT img:data:image/png;base64,
!define GITHUB img:data:image/png;base64,

!define DEVICONS https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/master/devicons
